{
  "openapi": "3.1.1",
  "info": {
    "title": "keep-server-api-three-tier-architecture - OpenAPI 3.1.1",
    "description": "This API is part of a note-taking application designed with a three-tier architecture. The goal of this application is to provide those who are starting out in software development with a clear understanding of how an application can scale from a three-tier architecture to a microservices-based architecture. I hope you find it very useful.\n\n**Developer:** <br> Name: Carlos Daniel Menchaca Arauz <br> Linkedin: [@iamcarlosdaniel](https://www.linkedin.com/in/iamcarlosdaniel/) <br> Portfolio: [iamcarlosdaniel.com](https://iamcarlosdaniel.com)\n\nDocumentation written by <br> **Carlos Daniel Menchaca Arauz**",
    "version": "1.0.11"
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints relacionados con la autenticación y autorización de usuarios. Permiten gestionar el acceso a la API, incluyendo Sign up, Sign in y la obtención de tokens de acceso."
    },
    {
      "name": "Users",
      "description": "Endpoints relacionados con la gestión de usuarios. Permiten realizar operaciones CRUD sobre los datos de los usuarios, así como la gestión de su información personal y de contacto."
    },
    {
      "name": "Channels",
      "description": "Operations about user"
    }
  ],
  "paths": {
    "/auth/sign-up": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign up",
        "description": "Permite a un nuevo usuario registrarse proporcionando su información personal y de contacto.",
        "operationId": "signUpUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Nombre de usuario"
                  },
                  "first_name": {
                    "type": "string",
                    "description": "Nombres del usuario"
                  },
                  "last_name": {
                    "type": "string",
                    "description": "Apellidos del usuario"
                  },
                  "date_of_birth": {
                    "type": "string",
                    "description": "Fecha de nacimiento del usuario"
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["male", "female", "other"],
                    "description": "Género del usuario"
                  },
                  "bio": {
                    "type": "string",
                    "description": "Biografía del usuario"
                  },
                  "location": {
                    "type": "object",
                    "description": "Ubicación del usuario",
                    "properties": {
                      "city_id": {
                        "type": "string",
                        "description": "ID de la ciudad del usuario"
                      }
                    }
                  },
                  "phone_number": {
                    "type": "string",
                    "description": "Número de teléfono del usuario"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Correo electrónico del usuario"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "Contraseña del usuario"
                  },
                  "confirm_password": {
                    "type": "string",
                    "format": "password",
                    "description": "Confirmación de la contraseña"
                  }
                },
                "required": [
                  "username",
                  "first_name",
                  "last_name",
                  "date_of_birth",
                  "gender",
                  "bio",
                  "phone_number",
                  "email",
                  "password",
                  "confirm_password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registro exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Estado de la respuesta",
                      "example": "OK"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "description": "Mensaje de éxito",
                          "example": "Correo de confirmacion enviado exitosamente a support@iamcarlosdaniel.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Estado de la respuesta",
                      "example": "FAILED"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "path": {
                                "type": "array",
                                "items": {
                                  "type": "string",
                                  "description": "Campo que no pasó la validación"
                                }
                              },
                              "message": {
                                "type": "string",
                                "description": "Mensaje de error"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "status": "FAILED",
                  "data": {
                    "error": [
                      {
                        "path": ["email"],
                        "message": "El correo electrónico debe ser una dirección válida."
                      },
                      {
                        "path": ["password"],
                        "message": "La contraseña debe tener al menos 8 caracteres."
                      }
                    ]
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflicto de datos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "FAILED"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "message": {
                                "type": "string",
                                "example": "La direccion de correo proporcionada ya esta en uso."
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
