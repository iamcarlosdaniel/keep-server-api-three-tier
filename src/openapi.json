                    "data": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "message": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "example1": {
                    "summary": "OTP incorrecto",
                    "description": "El OTP proporcionado es invalido.",
                    "value": {
                      "status": "FAILED",
                      "data": {
                        "error": [
