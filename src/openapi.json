                    "status": {
                      "type": "string",
                      "description": "Estado de la respuesta",
                      "example": "FAILED"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "path": {
                                "type": "array",
                                "items": {
                                  "type": "string",
                                  "description": "Campo que no pasó la validación"
